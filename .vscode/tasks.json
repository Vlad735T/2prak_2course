{
    "version": "2.0.0",
    "command": "g++",
    //"isShellCommand": true,
    "args": [
        "main.cpp",
        "-o",
        "main",
        "-lcjson"
    ],
    "ShowOutput": "always",
    "problemMatchers": [
        "$gcc"
    ],
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lcjson",
                "-Wl,-rpath,/usr/local/lib/"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher":[
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}